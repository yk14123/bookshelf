<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bookshelf_white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bookshelf_net_disconnect"
        android:contentDescription="@string/bookshelf_content_description"
        app:layout_heightPercent="46%w"
        app:layout_widthPercent="50%w" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/bookshelf_reconnected_net"
        android:textColor="@color/bookshelf_tip_text_color"
        app:layout_textSizePercent="4.5%w" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/bookshelf_refresh_data"
        android:textColor="@color/bookshelf_tip_text_color"
        app:layout_marginTopPercent="6%w"
        app:layout_textSizePercent="4.5%w" />

</com.zhy.android.percent.support.PercentLinearLayout>