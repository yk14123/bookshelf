<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tb_book_category_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bookshelf_app_bar_bg">

    <ImageView
        android:id="@+id/iv_bookshelf_left_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:paddingTop="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_13"
        android:src="@drawable/bookshelf_icon_back_black"
        android:contentDescription="@string/bookshelf_content_description"/>

    <TextView
        android:id="@+id/tv_bookshelf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_bookshelf_right_menu"
        android:layout_toEndOf="@+id/iv_bookshelf_left_menu"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/bookshelf_title_text_color"
        android:textSize="@dimen/sp_18"
        android:padding="6dp"
        app:layout_marginEndPercent="3%w"
        app:layout_marginStartPercent="3%w"
        tools:text="習近平的著作" />

    <ImageView
        android:id="@+id/iv_bookshelf_right_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/bookshelf_icon_font"
        android:contentDescription="@string/bookshelf_content_description"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:paddingTop="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_13"/>

</com.zhy.android.percent.support.PercentRelativeLayout>