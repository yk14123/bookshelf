<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_wrapper"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@null"/>

    <com.chinafocus.bookshelf.ui.widgets.MyFrameLayout
        android:id="@+id/cv_book_meta_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_book_meta_header_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#fff"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_expand_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"/>

            <TextView
                android:id="@+id/tv_expand_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="内容"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_expand_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/bookshelf_arrow_down"
                android:drawablePadding="10dp"
                android:layout_gravity="center_horizontal"
                android:text="更多"/>

        </LinearLayout>

    </com.chinafocus.bookshelf.ui.widgets.MyFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

        <View
            android:layout_width="5dp"
            android:layout_height="22dp"
            android:background="#9B704A"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="center_vertical"
            android:text="@string/bookshelf_book_summary"
            android:textColor="@color/bookshelf_title_text_color"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_book_meta_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:scrollbars="none"/>

</com.zhy.android.percent.support.PercentLinearLayout>