<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_header_wrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bookshelf_metadata_header_wrapper"/>

    <com.chinafocus.bookshelf.ui.widgets.MyFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bookshelf_metadata_myframelayout_bg_view"
            android:background="#fff"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/bookshelf_metadata_cardview_margin"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="@dimen/dp_3"
            app:contentPadding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="@dimen/bookshelf_metadata_cardview_linearlayout_padding">

                <TextView
                    android:id="@+id/tv_expand_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="标题"/>

                <TextView
                    android:id="@+id/tv_expand_content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="@dimen/bookshelf_metadata_text_content_linespacing"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_expand_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:drawableRight="@drawable/bookshelf_arrow_down"
                    android:drawablePadding="10dp"
                    android:text="更多"/>

            </LinearLayout>

