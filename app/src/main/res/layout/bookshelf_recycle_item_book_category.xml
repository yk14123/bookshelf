<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_book_category_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <ImageView
        android:id="@+id/iv_book_category_item_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:contentDescription="@string/bookshelf_content_description"
        android:scaleType="centerInside"
        app:layout_heightPercent="27%w"
        app:layout_widthPercent="23%w"
        tools:background="@drawable/bookshelf_default_cover_port" />


    <TextView
        android:id="@+id/tv_book_category_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_book_category_item_cover"
        android:layout_toEndOf="@+id/iv_book_category_item_cover"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15"
        tools:text="现当代文学" />

    <TextView
        android:id="@+id/tv_book_category_item_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_book_category_item_cover"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#666666"
        android:textSize="@dimen/sp_13"
        tools:text="《马列主义经典作家文库著作单行本: 共 产宣言》是马克思、 恩格斯为共产主义同盟写的纲领. 在这个纲领性文献中，马克" />

    <ImageView
        android:id="@+id/iv_book_category_item_author"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/iv_book_category_item_cover"
        android:layout_toEndOf="@+id/iv_book_category_item_cover"
        android:background="@drawable/bookshelf_author_icon"
        android:contentDescription="@string/bookshelf_content_description"
        app:layout_heightPercent="4%w"
        app:layout_widthPercent="4%w" />

    <TextView
        android:id="@+id/tv_book_category_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_book_category_item_author"
        android:layout_alignBottom="@+id/iv_book_category_item_cover"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@+id/iv_book_category_item_author"
        android:gravity="center"
        android:textColor="#999999"
        android:textSize="@dimen/sp_11"
        tools:text="现当代文学" />

</com.zhy.android.percent.support.PercentRelativeLayout>
