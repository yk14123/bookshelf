<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_book_meta_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bookshelf_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_book_meta_item_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/bookshelf_title_text_color"
        android:textStyle="bold"
        app:layout_heightPercent="15%w"
        app:layout_textSizePercent="4.2%w"
        tools:text="@string/app_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bookshelf_line_color"/>
    
</com.zhy.android.percent.support.PercentLinearLayout>